                         Height="25"
                         FontWeight="Normal"
                        TextChanged="tfThresholdForItem_TextChanged"
                         Grid.Column="1"/>

                        </Grid>

                        <Grid Grid.Row="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="   " Grid.Column="0"/>
                            <Button Name="btnEnterThreshold"
                                Content="  Postavi prag izabrane stavke šanka "
                                  Width="Auto"
                                  Click="btnEnterThreshold_Click"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Grid.Column="1"/>
                        </Grid>



                        <Grid  Grid.Row="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="   "/>
                            <TextBlock Text="Prag izabrane stavke šanka je : " Grid.Column="1"/>
                        </Grid>

                        <Grid Grid.Row = "13">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Name="tfThresholdForItemRead" 
                                    FontSize="16"
                                    Height="25"
                                    IsReadOnly="True"
                                    FontWeight="Normal"
                                    TextChanged="tfThresholdForItem_TextChanged"
                                    Grid.Column="1"/>

                        </Grid>


                    </Grid>

                    <Grid Name="gridTab3RightSide" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Name="gridFilterTab3" Grid.Column="1" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="290"/>
                                <ColumnDefinition Width="255"/>
                                <ColumnDefinition Width="10" MaxWidth="10"/>
                                <ColumnDefinition Width="2*"/>

                                <ColumnDefinition Width="0.1*"/>
                                <ColumnDefinition MaxWidth="30"/>
                                <ColumnDefinition Width="10" MaxWidth="10"/>
                                <ColumnDefinition MaxWidth="30"/>
                                <ColumnDefinition Width="20" MaxWidth="20"/>
                            </Grid.ColumnDefinitions>
                            <ToolBar Name="leftToolBarTab3" Grid.Column="0" Grid.ColumnSpan="10" Height="36" HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" Width="Auto" Background="LightGray"/>

                            <TextBlock Text="   Izaberite kolonu koju želite filtrirati : "
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>

                            <ComboBox Grid.Column="1" HorizontalAlignment="Stretch"  Name="cmbFilterColumnTab3" VerticalAlignment="Center" Width="Auto" Cursor="Hand">

                                <ComboBoxItem>Izaberite kolonu za filtriranje</ComboBoxItem>
                                <ComboBoxItem>Šifra stavke</ComboBoxItem>
                                <ComboBoxItem>Naziv stavke</ComboBoxItem>
                                <ComboBoxItem>Grupa stavke</ComboBoxItem>
                                <ComboBoxItem>Jed cena stavke(din)</ComboBoxItem>
                                <ComboBoxItem>Jed kol stavke(kg/l)</ComboBoxItem>
                                <ComboBoxItem>Prag(kg/l)</ComboBoxItem>

                            </ComboBox>


                            <TextBox Name="tfFilterTab3"
                                     MouseEnter="tfFilterTab3_MouseEnter"
                                     MouseLeave="tfFilterTab3_MouseLeave"
                                     KeyDown="tfFilterTab3_KeyDown"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch"
                                     Grid.Column="3"/>

                            <Button Name="btnAddFilterTab3"
                                    Background="Black"
                                    Height="25"
                                    MouseEnter="btnAddFilterTab3_MouseEnter"
                                    MouseLeave="btnAddFilterTab3_MouseLeave"
                                    Click="btnAddFilterTab3_Click"
                                    HorizontalAlignment="Center"
